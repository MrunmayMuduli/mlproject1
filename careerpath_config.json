{
  "app_name": "CareerPath AI",
  "version": "1.0.0",
  "description": "Personalized Career Advice Generator using LLM + Rule Engine",
  
  "llm_config": {
    "provider": "groq",
    "model": "llama3-8b-8192",
    "temperature": 0.7,
    "max_tokens": 2000,
    "timeout": 30
  },
  
  "skill_mapping_categories": [
    "data scientist",
    "ml engineer",
    "software engineer",
    "product manager",
    "mechanical engineer"
  ],
  
  "governance": {
    "require_disclaimer": true,
    "warn_about_bias": true,
    "recommend_mentorship": true,
    "store_data": false,
    "privacy_level": "high"
  },
  
  "ui_options": {
    "cli": {
      "enabled": true,
      "file": "app.py",
      "input_method": "interactive_prompts"
    },
    "streamlit": {
      "enabled": true,
      "file": "app_streamlit.py",
      "port": 8501
    }
  },
  
  "roadmap_sections": [
    "Skills Gap Analysis",
    "6-Month Plan",
    "12-Month Plan",
    "24-Month Plan",
    "Motivational Summary",
    "Top 3 Resources"
  ],
  
  "action_plan_config": {
    "max_steps": 6,
    "timeframe_days": 180,
    "format": "week-based"
  },
  
  "disclaimers": {
    "over_promise_risk": "This tool does not guarantee employment or success",
    "bias_risk": "May contain biases based on LLM training data",
    "privacy_note": "Career information is not stored permanently",
    "recommendation": "Consult real mentors, recruiters, and career coaches"
  }
}
